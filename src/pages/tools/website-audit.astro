---
import Layout from "../../layouts/main.astro";
import WebsiteAudit from "../../components/WebsiteAudit";
import { ArrowLeft, Shield, Zap, BarChart3, CheckCircle } from "lucide-react";
---

<Layout
  title="Free Website MarTech Audit | Ibero Data"
  description="Analyze your website's marketing technology stack, GDPR compliance, and performance. Free tool to detect GTM, GA4, Meta Pixel, consent platforms, and more."
>
  <section class="py-24 md:py-32 bg-background min-h-screen">
    <div class="container mx-auto px-6">
      <!-- Back Link -->
      <a
        href="/"
        class="inline-flex items-center gap-2 text-muted-foreground hover:text-foreground transition-colors mb-8"
      >
        <ArrowLeft className="w-4 h-4" />
        Back to Home
      </a>

      <!-- Header -->
      <div class="text-center max-w-3xl mx-auto mb-12">
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-primary/10 border border-primary/20 rounded-full text-primary text-sm font-medium mb-6">
          <Shield className="w-4 h-4" />
          Free Tool
        </div>
        <h1 class="text-4xl md:text-5xl font-bold text-foreground mb-4">
          MarTech & Privacy Audit
        </h1>
        <p class="text-lg text-muted-foreground">
          Analyze your website's tracking setup, consent management, and GDPR compliance in seconds.
          Completely free, no signup required.
        </p>
      </div>

      <!-- Features -->
      <div class="grid sm:grid-cols-3 gap-6 max-w-3xl mx-auto mb-12">
        <div class="flex items-center gap-3 p-4 bg-card rounded-xl border border-border">
          <div class="p-2 rounded-lg bg-primary/10">
            <BarChart3 className="w-5 h-5 text-primary" />
          </div>
          <div>
            <p class="font-medium text-foreground">25+ Platforms</p>
            <p class="text-sm text-muted-foreground">Detected automatically</p>
          </div>
        </div>
        <div class="flex items-center gap-3 p-4 bg-card rounded-xl border border-border">
          <div class="p-2 rounded-lg bg-primary/10">
            <Shield className="w-5 h-5 text-primary" />
          </div>
          <div>
            <p class="font-medium text-foreground">GDPR Check</p>
            <p class="text-sm text-muted-foreground">Consent compliance</p>
          </div>
        </div>
        <div class="flex items-center gap-3 p-4 bg-card rounded-xl border border-border">
          <div class="p-2 rounded-lg bg-primary/10">
            <Zap className="w-5 h-5 text-primary" />
          </div>
          <div>
            <p class="font-medium text-foreground">Performance</p>
            <p class="text-sm text-muted-foreground">Core Web Vitals</p>
          </div>
        </div>
      </div>

      <!-- Audit Tool -->
      <WebsiteAudit client:load />

      <!-- What We Detect -->
      <div class="mt-20 max-w-4xl mx-auto">
        <h2 class="text-2xl font-bold text-foreground text-center mb-8">
          What We Detect
        </h2>
        <div class="grid sm:grid-cols-2 md:grid-cols-4 gap-6">
          <div class="space-y-3">
            <h3 class="font-semibold text-foreground">Google Stack</h3>
            <ul class="space-y-2 text-sm text-muted-foreground">
              <li class="flex items-center gap-2">
                <CheckCircle className="w-4 h-4 text-green-500" />
                Google Tag Manager
              </li>
              <li class="flex items-center gap-2">
                <CheckCircle className="w-4 h-4 text-green-500" />
                GTM Server-Side
              </li>
              <li class="flex items-center gap-2">
                <CheckCircle className="w-4 h-4 text-green-500" />
                Google Analytics 4
              </li>
              <li class="flex items-center gap-2">
                <CheckCircle className="w-4 h-4 text-green-500" />
                Google Ads
              </li>
            </ul>
          </div>
          <div class="space-y-3">
            <h3 class="font-semibold text-foreground">Social & Ads</h3>
            <ul class="space-y-2 text-sm text-muted-foreground">
              <li class="flex items-center gap-2">
                <CheckCircle className="w-4 h-4 text-green-500" />
                Meta Pixel
              </li>
              <li class="flex items-center gap-2">
                <CheckCircle className="w-4 h-4 text-green-500" />
                TikTok Pixel
              </li>
              <li class="flex items-center gap-2">
                <CheckCircle className="w-4 h-4 text-green-500" />
                LinkedIn Insight
              </li>
              <li class="flex items-center gap-2">
                <CheckCircle className="w-4 h-4 text-green-500" />
                Twitter/Pinterest
              </li>
            </ul>
          </div>
          <div class="space-y-3">
            <h3 class="font-semibold text-foreground">Consent</h3>
            <ul class="space-y-2 text-sm text-muted-foreground">
              <li class="flex items-center gap-2">
                <CheckCircle className="w-4 h-4 text-green-500" />
                Cookiebot
              </li>
              <li class="flex items-center gap-2">
                <CheckCircle className="w-4 h-4 text-green-500" />
                OneTrust
              </li>
              <li class="flex items-center gap-2">
                <CheckCircle className="w-4 h-4 text-green-500" />
                Iubenda
              </li>
              <li class="flex items-center gap-2">
                <CheckCircle className="w-4 h-4 text-green-500" />
                CookieYes & more
              </li>
            </ul>
          </div>
          <div class="space-y-3">
            <h3 class="font-semibold text-foreground">Analytics</h3>
            <ul class="space-y-2 text-sm text-muted-foreground">
              <li class="flex items-center gap-2">
                <CheckCircle className="w-4 h-4 text-green-500" />
                Hotjar
              </li>
              <li class="flex items-center gap-2">
                <CheckCircle className="w-4 h-4 text-green-500" />
                Microsoft Clarity
              </li>
              <li class="flex items-center gap-2">
                <CheckCircle className="w-4 h-4 text-green-500" />
                Mixpanel / Amplitude
              </li>
              <li class="flex items-center gap-2">
                <CheckCircle className="w-4 h-4 text-green-500" />
                Segment & more
              </li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Disclaimer -->
      <p class="text-center text-sm text-muted-foreground mt-16 max-w-2xl mx-auto">
        This tool uses Google PageSpeed Insights API to analyze your website. Results are based on a
        single page load and may not capture all tracking implementations. For a comprehensive audit,
        <a href="/#contact" class="text-primary hover:underline">contact our team</a>.
      </p>
    </div>
  </section>
</Layout>
