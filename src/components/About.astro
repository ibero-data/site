---
import { TrendingUp, Zap, Layers, Target } from "lucide-react";
import { getLangFromUrl, getTranslations } from "../lib/i18n";

const lang = getLangFromUrl(Astro.url);
const t = getTranslations(lang);

const reasons = [
  {
    icon: Zap,
    title: t.reasons.costEfficiency,
    description: t.reasons.costEfficiencyDesc,
  },
  {
    icon: TrendingUp,
    title: t.reasons.scalability,
    description: t.reasons.scalabilityDesc,
  },
  { icon: Layers, title: t.reasons.simple, description: t.reasons.simpleDesc },
  {
    icon: Target,
    title: t.reasons.customizedSolutions,
    description: t.reasons.customizedSolutionsDesc,
  },
];
---

<section id="about" class="py-20 relative overflow-hidden">
  <!-- Background Pattern -->
  <div
    class="absolute inset-0 bg-gradient-to-r from-ibero-yellow/5 to-ibero-red/5 opacity-50"
  >
  </div>

  <div class="container mx-auto px-6 relative z-10">
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <!-- Left Content -->
      <div class="space-y-6">
        <h2 class="text-4xl md:text-5xl font-bold">
          <span class="gradient-text-fire">
            {t.about.title}
          </span>
        </h2>
        <p class="text-lg text-gray-600 dark:text-gray-400 leading-relaxed">
          {t.about.description}
        </p>
      </div>

      <!-- Right Content - Reasons Grid -->
      <div class="grid grid-cols-2 gap-4">
        {
          reasons.map((reason, index) => (
            <div
              class="p-6 bg-white/80 dark:bg-gray-900/80 backdrop-blur-md rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-1 border border-gray-200/20"
              style={`animation-delay: ${index * 100}ms`}
            >
              <reason.icon className="w-10 h-10 text-ibero-red mb-3" />
              <h3 class="font-bold text-lg mb-2 text-gray-900 dark:text-white">
                {reason.title}
              </h3>
              <p class="text-sm text-gray-600 dark:text-gray-400">
                {reason.description}
              </p>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
