---
import { MapPin, Zap, Shield, Users } from "lucide-react";
import { getLangFromUrl, getTranslations } from "../lib/i18n";

const lang = getLangFromUrl(Astro.url);
const t = getTranslations(lang);

const values = [
  {
    icon: Zap,
    title: t.about.valueEfficiency,
    description: t.about.valueEfficiencyDesc,
  },
  {
    icon: Shield,
    title: t.about.valueReliability,
    description: t.about.valueReliabilityDesc,
  },
  {
    icon: Users,
    title: t.about.valuePartnership,
    description: t.about.valuePartnershipDesc,
  },
];

const technologies = [
  "Python", "TypeScript", "ClickHouse", "DuckDB",
  "PostgreSQL", "AWS", "GCP", "dbt", "Airbyte", "And more...",
];
---

<section id="about" class="py-24 md:py-32 bg-muted">
  <div class="container mx-auto px-6 relative z-10">
    <div class="max-w-6xl mx-auto">
      <!-- Two column layout -->
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-start">

        <!-- Left: About Content -->
        <div>
          <h2 class="text-4xl md:text-5xl font-bold text-foreground mb-6">
            {t.about.title}
          </h2>

          <p class="text-lg text-foreground mb-6 leading-relaxed">
            {t.about.description}
          </p>

          <p class="text-muted-foreground mb-8 leading-relaxed">
            {t.about.description2}
          </p>

          <!-- Location -->
          <div class="flex items-center gap-3 text-muted-foreground mb-8">
            <div class="p-2 rounded-lg bg-primary/10 border border-primary/15">
              <MapPin className="w-5 h-5 text-primary" />
            </div>
            <span>{t.about.location}</span>
          </div>

          <!-- Technologies -->
          <div>
            <p class="text-sm text-muted-foreground uppercase tracking-wider mb-3">
              {t.about.technologiesTitle}
            </p>
            <div class="flex flex-wrap gap-2">
              {technologies.map((tech) => (
                <span class="px-3 py-1.5 text-sm bg-card border border-border rounded-lg text-foreground">
                  {tech}
                </span>
              ))}
            </div>
          </div>
        </div>

        <!-- Right: Values -->
        <div class="space-y-6">
          <h3 class="text-lg font-semibold text-muted-foreground uppercase tracking-wider mb-4">
            {t.about.valuesTitle}
          </h3>

          {values.map((value) => (
            <div class="p-6 rounded-xl bg-card border border-border hover:border-primary/30 transition-colors">
              <div class="flex items-start gap-4">
                <div class="inline-flex items-center justify-center p-3 rounded-xl bg-primary/10 border border-primary/15 flex-shrink-0">
                  <value.icon className="w-5 h-5 text-primary" strokeWidth={1.5} />
                </div>
                <div>
                  <h4 class="font-semibold text-card-foreground mb-1">{value.title}</h4>
                  <p class="text-sm text-muted-foreground leading-relaxed">{value.description}</p>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>
