---
import ContactForm from "./ContactForm";
import { Mail, MapPin, Phone } from "lucide-react";
import { getLangFromUrl, getTranslations } from "../lib/i18n";

const lang = getLangFromUrl(Astro.url);
const t = getTranslations(lang);
---

<section
  id="contact"
  class="py-20 bg-gradient-to-b from-white to-gray-50 dark:from-gray-900 dark:to-gray-950"
>
  <div class="container mx-auto px-6">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-4">
        <span
          class="bg-gradient-to-r from-ibero-red to-ibero-yellow bg-clip-text text-transparent"
        >
          {t.contact.title}
        </span>
      </h2>
      <p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
        {t.contact.description}
      </p>
    </div>

    <div class="grid md:grid-cols-2 gap-12 max-w-6xl mx-auto">
      <!-- Contact Information -->
      <div class="space-y-8">
        <div
          class="flex items-start space-x-4 p-6 bg-white/60 dark:bg-gray-900/60 backdrop-blur-md rounded-xl"
        >
          <div
            class="p-3 bg-gradient-to-br from-ibero-red/10 to-ibero-yellow/10 rounded-lg"
          >
            <Mail className="w-6 h-6 text-ibero-red" />
          </div>
          <div>
            <h3 class="font-semibold text-lg mb-1">Email</h3>
            <p class="text-gray-600 dark:text-gray-400">info@iberodata.com</p>
          </div>
        </div>

        <div
          class="flex items-start space-x-4 p-6 bg-white/60 dark:bg-gray-900/60 backdrop-blur-md rounded-xl"
        >
          <div
            class="p-3 bg-gradient-to-br from-ibero-red/10 to-ibero-yellow/10 rounded-lg"
          >
            <MapPin className="w-6 h-6 text-ibero-red" />
          </div>
          <div>
            <h3 class="font-semibold text-lg mb-1">Location</h3>
            <p class="text-gray-600 dark:text-gray-400">Spain, Italy, Portugal</p>
          </div>
        </div>

        <!-- Decorative Element -->
        <div class="relative">
          <div
            class="absolute inset-0 bg-gradient-to-r from-ibero-yellow/20 to-ibero-red/20 blur-3xl"
          >
          </div>
          <div
            class="relative p-8 bg-white/40 dark:bg-gray-900/40 backdrop-blur-md rounded-2xl text-center"
          >
            <p class="text-lg font-medium text-gray-700 dark:text-gray-300">
              We're here to help transform your data into meaningful insights
            </p>
          </div>
        </div>
      </div>

      <!-- Contact Form -->
      <div
        class="p-8 bg-white/80 dark:bg-gray-900/80 backdrop-blur-md rounded-2xl shadow-xl"
      >
        <ContactForm client:load translations={t} />
      </div>
    </div>
  </div>
</section>
