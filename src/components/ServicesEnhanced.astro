---
import { Database, BarChart3, Code, BookOpen, Headphones, Users, Sparkles, ArrowRight } from 'lucide-react';
import { getLangFromUrl, getTranslations } from '../lib/i18n';

const lang = getLangFromUrl(Astro.url);
const t = getTranslations(lang);

// Core services - the main 3
const coreServices = [
  {
    icon: Database,
    title: t.services.dataEngineering,
    description: t.services.dataEngineeringDesc,
    features: t.services.dataEngineeringFeatures,
  },
  {
    icon: BarChart3,
    title: t.services.analytics,
    description: t.services.analyticsDesc,
    features: t.services.analyticsFeatures,
  },
  {
    icon: Code,
    title: t.services.customDevelopment,
    description: t.services.customDevelopmentDesc,
    features: t.services.customDevelopmentFeatures,
  },
];

// Secondary services
const secondaryServices = [
  {
    icon: BookOpen,
    title: t.services.training,
    description: t.services.trainingDesc,
  },
  {
    icon: Users,
    title: t.services.openSource,
    description: t.services.openSourceDesc,
  },
  {
    icon: Headphones,
    title: t.services.support,
    description: t.services.supportDesc,
  },
];
---

<section id="services" class="relative py-24 md:py-32 bg-muted">
  <div class="container mx-auto px-6 relative z-10">
    <!-- Section Header -->
    <div class="text-center mb-16 md:mb-20">
      <h2 class="text-4xl md:text-5xl font-bold mb-4 text-foreground">
        {t.services.title}
      </h2>
      <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
        {t.services.subtitle}
      </p>
    </div>

    <!-- Core Services - 3 Column Grid -->
    <div class="grid md:grid-cols-3 gap-6 md:gap-8 mb-16">
      {coreServices.map((service) => (
        <div class="p-8 rounded-2xl transition-all duration-300 bg-card border border-border hover:border-primary/30 hover:shadow-lg">
          <!-- Icon -->
          <div class="inline-flex items-center justify-center p-3 rounded-xl bg-primary/10 border border-primary/20 mb-6">
            <service.icon className="w-7 h-7 text-primary" strokeWidth={1.5} />
          </div>

          <!-- Title -->
          <h3 class="text-xl font-bold text-card-foreground mb-3">
            {service.title}
          </h3>

          <!-- Description -->
          <p class="text-muted-foreground mb-6 leading-relaxed">
            {service.description}
          </p>

          <!-- Features list -->
          {service.features && (
            <ul class="space-y-2">
              {service.features.map((feature: string) => (
                <li class="flex items-center gap-2 text-sm text-card-foreground">
                  <span class="w-1.5 h-1.5 rounded-full bg-primary flex-shrink-0"></span>
                  {feature}
                </li>
              ))}
            </ul>
          )}

          <!-- Learn more link -->
          <a href="#contact" class="inline-flex items-center gap-1 mt-6 text-primary hover:text-primary/80 transition-colors text-sm font-medium group">
            {t.services.learnMore}
            <span class="transition-transform group-hover:translate-x-1">→</span>
          </a>
        </div>
      ))}
    </div>

    <!-- Secondary Services - Smaller, 3 column -->
    <div class="border-t border-border pt-12">
      <h3 class="text-center text-muted-foreground text-sm uppercase tracking-wider mb-8">
        {t.services.additionalServices}
      </h3>
      <div class="grid md:grid-cols-3 gap-6">
        {secondaryServices.map((service) => (
          <div class="flex items-start gap-4 p-5 rounded-xl bg-card border border-border hover:border-primary/30 transition-colors">
            <div class="inline-flex items-center justify-center p-2.5 rounded-xl bg-primary/10 border border-primary/20 flex-shrink-0">
              <service.icon className="w-5 h-5 text-primary" strokeWidth={1.5} />
            </div>
            <div>
              <h4 class="font-semibold text-card-foreground mb-1">{service.title}</h4>
              <p class="text-sm text-muted-foreground">{service.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Free Tool Banner -->
    <div class="mt-16 p-6 md:p-8 rounded-2xl bg-gradient-to-r from-primary/5 via-primary/10 to-accent/5 border border-primary/20">
      <div class="flex flex-col md:flex-row items-center justify-between gap-6">
        <div class="flex items-start gap-4">
          <div class="p-3 rounded-xl bg-primary/10 border border-primary/20 flex-shrink-0">
            <Sparkles className="w-6 h-6 text-primary" />
          </div>
          <div>
            <div class="flex items-center gap-2 mb-1">
              <h3 class="text-lg font-bold text-foreground">Free MarTech Audit Tool</h3>
              <span class="px-2 py-0.5 text-xs font-medium bg-primary/20 text-primary rounded-full">New</span>
            </div>
            <p class="text-muted-foreground">
              Analyze your website's tracking setup, GDPR compliance, and performance in seconds. Detect GTM, GA4, Meta Pixel, consent platforms, and 25+ more tools.
            </p>
          </div>
        </div>
        <a
          href="/tools/website-audit"
          class="inline-flex items-center gap-2 px-6 py-3 bg-primary hover:bg-primary/90 text-primary-foreground font-semibold rounded-xl transition-colors whitespace-nowrap"
        >
          Try It Free
          <ArrowRight className="w-4 h-4" />
        </a>
      </div>
    </div>

    <!-- Bottom CTA -->
    <div class="mt-12 text-center">
      <div class="inline-flex flex-col items-center gap-4 px-8 py-8 md:px-12 md:py-10 bg-card rounded-2xl border border-border shadow-lg">
        <h3 class="text-xl md:text-2xl font-bold text-card-foreground">
          {t.services.ctaTitle}
        </h3>
        <p class="text-muted-foreground max-w-md">
          {t.services.ctaDescription}
        </p>
        <a href="#contact" class="inline-flex items-center gap-2 mt-2 px-7 py-3.5 font-semibold text-primary-foreground rounded-lg bg-primary hover:bg-primary/90 transition-colors shadow-md">
          {t.services.ctaButton}
          <span>→</span>
        </a>
      </div>
    </div>
  </div>
</section>
