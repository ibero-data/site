---
import { getLangFromUrl, getTranslations } from "../lib/i18n";
import { ArrowRight, MessageCircle } from "lucide-react";

const lang = getLangFromUrl(Astro.url);
const t = getTranslations(lang);
---

<section
  id="home"
  class="relative min-h-screen flex items-center justify-center overflow-hidden bg-background"
>
  <!-- Content -->
  <div class="container mx-auto px-6 relative z-10 py-20">
    <div class="text-center max-w-4xl mx-auto">
      <!-- Main Headline -->
      <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold mb-6 leading-tight animate-fade-in-up text-foreground">
        {t.hero.headline}
      </h1>

      <!-- Subheadline -->
      <p class="text-lg sm:text-xl md:text-2xl text-muted-foreground mb-8 max-w-3xl mx-auto animate-fade-in-up delay-100">
        {t.hero.subheadline}
      </p>

      <!-- CTA Buttons -->
      <div
        class="flex flex-col sm:flex-row gap-4 justify-center mb-16 animate-fade-in-up delay-200"
      >
        <a
          href="#contact"
          class="inline-flex items-center justify-center gap-2 px-7 py-3.5 font-semibold text-primary-foreground rounded-lg bg-primary hover:bg-primary/90 transition-colors shadow-md"
        >
          <MessageCircle className="w-5 h-5" />
          {t.cta.getInTouch}
        </a>

        <a
          href="#products"
          class="inline-flex items-center justify-center gap-2 px-7 py-3.5 font-semibold rounded-lg border-2 border-border text-foreground hover:bg-muted transition-colors"
        >
          {t.cta.viewWork}
          <ArrowRight className="w-4 h-4" />
        </a>
      </div>

      <!-- Social Proof Stats -->
      <div class="animate-fade-in-up delay-300">
        <p class="text-muted-foreground text-sm uppercase tracking-wider mb-6">
          {t.hero.trustedBy}
        </p>
        <div class="flex flex-wrap justify-center gap-8 md:gap-12">
          <div class="text-center">
            <div class="text-3xl md:text-4xl font-bold text-primary">8+</div>
            <div class="text-sm text-muted-foreground">{t.hero.yearsExperience}</div>
          </div>
          <div class="text-center">
            <div class="text-3xl md:text-4xl font-bold text-primary">500+</div>
            <div class="text-sm text-muted-foreground">{t.hero.pipelinesBuilt}</div>
          </div>
          <div class="text-center">
            <div class="text-3xl md:text-4xl font-bold text-primary">1K+</div>
            <div class="text-sm text-muted-foreground">{t.hero.githubStars}</div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
    <div class="w-6 h-10 border-2 border-border rounded-full flex justify-center pt-2">
      <div class="w-1 h-2 bg-muted-foreground rounded-full"></div>
    </div>
  </div>
</section>

<style>
  .animate-fade-in-up {
    opacity: 0;
    animation: fadeInUp 0.6s ease-out forwards;
  }

  .delay-100 {
    animation-delay: 100ms;
  }

  .delay-200 {
    animation-delay: 200ms;
  }

  .delay-300 {
    animation-delay: 300ms;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
