---
import { getLangFromUrl, getTranslations } from "../lib/i18n";
import { Github, Linkedin } from "lucide-react";

const lang = getLangFromUrl(Astro.url);
const t = getTranslations(lang);
const currentYear = new Date().getFullYear();
---

<footer class="bg-foreground text-background py-12">
  <div class="container mx-auto px-6">
    <div class="flex flex-col md:flex-row items-center justify-between gap-8">
      <!-- Logo and Copyright -->
      <div class="flex items-center space-x-3">
        <img src="/logo.png" alt="Ibero Data" class="h-8 w-auto" />
        <div>
          <p class="text-sm text-background/70">
            Ibero Data Â© {currentYear}. {t.footer.allRightsReserved}
          </p>
        </div>
      </div>

      <!-- Quick Links -->
      <div class="flex flex-wrap justify-center gap-6">
        <a
          href="#home"
          class="text-background/70 hover:text-background transition-colors text-sm"
        >
          {t.header.home}
        </a>
        <a
          href="#services"
          class="text-background/70 hover:text-background transition-colors text-sm"
        >
          {t.header.services}
        </a>
        <a
          href="#products"
          class="text-background/70 hover:text-background transition-colors text-sm"
        >
          {t.header.products}
        </a>
        <a
          href="#about"
          class="text-background/70 hover:text-background transition-colors text-sm"
        >
          {t.header.about}
        </a>
        <a
          href="#contact"
          class="text-background/70 hover:text-background transition-colors text-sm"
        >
          {t.header.contact}
        </a>
      </div>

      <!-- Social Links -->
      <div class="flex space-x-3">
        <a
          href="https://github.com/ibero-data"
          target="_blank"
          rel="noopener noreferrer"
          class="p-2.5 bg-background/10 rounded-lg hover:bg-background/20 transition-colors group"
          aria-label="GitHub"
        >
          <Github
            className="w-5 h-5 text-background/70 group-hover:text-background"
          />
        </a>
        <a
          href="https://www.linkedin.com/company/iberodata/"
          target="_blank"
          rel="noopener noreferrer"
          class="p-2.5 bg-background/10 rounded-lg hover:bg-background/20 transition-colors group"
          aria-label="LinkedIn"
        >
          <Linkedin
            className="w-5 h-5 text-background/70 group-hover:text-background"
          />
        </a>
      </div>
    </div>
  </div>
</footer>
